<div class="product-card">
    <h3><a href="/products/{{id}}">{{name}}</a></h3>
    <img src="{{image_url}}" alt="{{name}}">
    <p class="price">${{price}}</p>
    {{#in_stock}}
        {{> components/button}} 
    {{^in_stock}}
        <p class="out-of-stock">Out of Stock</p>
    {{/in_stock}}
</div>